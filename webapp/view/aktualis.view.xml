<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.g4s.controller.aktualis"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:form="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<Page title="Aktuális szállítás" class="sapUiFioriObjectPage" showNavButton="true" navButtonPress="handleNavButtonPress">
		<IconTabBar select="signee" class="iconTabBarPaddingTop" id="idIconTabBarMulti" expanded="true">
			<items>
				<IconTabFilter icon="sap-icon://home" text="Cím" key="addr">
					<form:SimpleForm minWidth="400">
						<core:Title text="Feladó"/>
						<Label text="Név"/>
						<Text text="{From}"/>
						<Label text="Irányítószám, Város"/>
						<Text text="{FPostalCode}, {FCity}"/>
						<Label text="Utca, házszám"/>
						<Text text="{FStreet}"/>
					</form:SimpleForm>
					<form:SimpleForm minWidth="400">
						<core:Title text="Címzett"/>
						<Label text="Cég"/>
						<Text text="{Company}"/>
						<Label text="Átvevő"/>
						<Text text="{To}"/>
						<Label text="Irányítószám, Város"/>
						<Text text="{TPostalCode}, {TCity}"/>
						<Label text="Utca, házszám"/>
						<Text text="{TStreet}"/>
						<Label text="Telefonszám"/>
						<Link text="{Phone}" href="tel:{Phone}" press="handlePhonePress" id="phoneLink"/>
					</form:SimpleForm>
					<VBox >
						<RadioButton groupName="GroupA" id="grpA01" select="onSelect" text="Sikeres"/>
						<!--  <CheckBox text="Utánvét összeg átvéve" selected="false" id="uv01" />	 -->
						<RadioButton groupName="GroupA" id="grpA02" select="onSelect" text="Sikertelen"/>
					</VBox>
					<VBox visible="false" id="grpB">
						<Input id="newZIP" type="Text"  placeholder="Új irányítószám"/>
						<Input id="newCity" type="Text" placeholder="Új Város"/>
						<Input id="newStreet" type="Text" placeholder="Új utca\házszám"/>
						<DateTimeInput id="newDate" visible="false" placeholder="Dátum"/>
						<RadioButton groupName="GroupB" id="grpB01" select="onSelectOther" text="Címzett nem található"/>
						<RadioButton groupName="GroupB" id="grpB02" select="onSelectOther" text="Címzett nem elérhető"/>
						<RadioButton groupName="GroupB" id="grpB03" select="onSelectOther" text="Már megvásárolta"/>
						<RadioButton groupName="GroupB" id="grpB04" select="onSelectOther" text="Nem kéri"/>
						<RadioButton groupName="GroupB" id="grpB05" select="onSelectOther" text="Hibás Áru"/>
						<RadioButton groupName="GroupB" id="grpB06" select="onSelectOther" text="Nem megfelelő áru"/>
						<RadioButton groupName="GroupB" id="grpB07" select="onSelectOther" text="Hibás szerződés adatok"/>
						<RadioButton groupName="GroupB" id="grpB08" select="onSelectOther" text="Nem tudja igazolni magát"/>
						<RadioButton groupName="GroupB" id="grpB09" select="onSelectOther" text="Nem beazonosítható"/>
						<RadioButton groupName="GroupB" id="grpB10" select="onSelectOther" text="Egyéb"/>
					</VBox>
					<TextArea placeholder="Egyéb szöveges ok" id="otherText" visible="true" rows="8" width="100%"/>
				</IconTabFilter>
				<IconTabFilter icon="sap-icon://database" text="Csomag">
					<Table headerText="Tételek" items="{Items}">
						<columns>
							<Column>
								<header>
									<Label text="Tétel ID" />
								</header>
							</Column>
							<Column hAlign="Right">
								<header>
									<Label text="Státusz"/>
								</header>
							</Column>
						</columns>
						<ColumnListItem>
							<cells>
								<ObjectIdentifier title="{ProductId}"/>
								<ObjectNumber number="{path: 'PickupStatus', formatter: 'util.Formatter.statusText' }"
									state="{path: 'PickupStatus', formatter: 'util.Formatter.statusState' }"/>
							</cells>
						</ColumnListItem>
					</Table>
				</IconTabFilter>
				<IconTabFilter icon="sap-icon://signature" key="sig" text="Aláírás">
					<l:VerticalLayout class="marginVerticalContent" width="90%">
						<l:content>
							<core:HTML content='&lt;div style=&quot;width: 600px; height: 200px; -ms-touch-action: none;&quot; id=&quot;signature&quot;&gt;&lt;/div&gt;'></core:HTML>
						</l:content>
						<VBox visible="true">
							<Input id="recipient" type="Text" placeholder="Átvevő neve"/>
						</VBox>
					</l:VerticalLayout>
				</IconTabFilter>
				<IconTabFilter icon="sap-icon://payment-approval" text="Utánvét">
					<Table headerText="Tételek" items="{Items}">
						<columns>
							<Column>
								<header>
									<Label text="Tétel ID"/>
								</header>
							</Column>
							<Column hAlign="Right">
								<header>
									<Label text="Utánvét?"/>
								</header>
							</Column>
							<Column hAlign="Right">
								<header>
									<Label text="Utánvét összeg"/>
								</header>
							</Column>
						</columns>
						<ColumnListItem>
							<cells>
								<ObjectIdentifier title="{ProductId}"/>
								<ObjectNumber number="{path: 'COD', formatter: 'util.Formatter.CODText' }"
									state="{path: 'COD', formatter: 'util.Formatter.CODState' }"/>
							</cells>
							<ObjectIdentifier title="{Price}"/>
						</ColumnListItem>
					</Table>
					<ObjectListItem id="total_id" title="Totál: " number=""/>
				</IconTabFilter>
			</items>
		</IconTabBar>
		<footer>
			<Bar>
				<contentRight>
					<Button type="Emphasized" text="Lezár" id="cls" press="close" width="150px" icon="sap-icon://sys-cancel"/>
				</contentRight>
				<contentLeft>
					<Button type="Emphasized" text="Felfüggeszt" id="susp" visible="true" press="suspend" width="150px" icon="sap-icon://sys-cancel"/>
					<Button type="Emphasized" text="Töröl" id="clr" visible="false" press="clear" width="150px" icon="sap-icon://sys-cancel"/>
				</contentLeft>
			</Bar>
		</footer>
	</Page>
</mvc:View>